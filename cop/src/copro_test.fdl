#include "copro.fdl"

dp test_copro(
    in dataout      : ns(32);
    in dataoutrdy   : ns(32);

    out cmd         : ns(32);
    out datain      : ns(32);
    out datainrdy   : ns(32)) {

    always {
         $display($dec,
                  "cmd: ",       cmd,
                  "datain: ",    datain,
                  "datainrdy: ", datainrdy
                  "dataout: ",   dataout,
                  "dataoutrdy: ",dataoutrdy);
    }

    sfg test_0 { cmd=0b0100; datain=0; datainrdy=1; }
    sfg test_0 { cmd=0b0100; datain=0; datainrdy=1; }
    sfg test_0 { cmd=0b0100; datain=0; datainrdy=1; }
    sfg test_0 { cmd=0b0100; datain=0; datainrdy=1; }

}
